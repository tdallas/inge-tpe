<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/colorPrimary_trans">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:id="@+id/preview"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DESCRIPCION DEL PRODUCTO"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/preview"
        android:layout_marginStart="10dp"
        android:id="@+id/descripcion_producto"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/descripcion_producto"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/precio"
        android:text="$ 50"/>

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/precio"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:inputType="number"
        android:imeOptions="actionDone"
        android:text="0"
        android:id="@+id/inputCantidad" />

</RelativeLayout>
