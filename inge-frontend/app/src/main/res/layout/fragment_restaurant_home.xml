<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/main_button"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:id="@+id/verPedidos"
            android:layout_marginEnd="20dp"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/icon_pedidos"
                android:layout_marginTop="10dp"
                android:src="@drawable/choices"
                android:layout_centerHorizontal="true"/>
            <TextView android:fontFamily="@font/roboto_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver pedidos"
                android:textSize="25sp"
                android:layout_below="@id/icon_pedidos"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/verPedidos"
            android:id="@+id/verUsuarios"
            android:clickable="true"
            android:background="@drawable/main_button"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/icon_usuarios"
                android:layout_marginTop="10dp"
                android:src="@drawable/avatar"
                android:layout_centerHorizontal="true"/>
            <TextView android:fontFamily="@font/roboto_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver usuarios"
                android:textSize="25sp"
                android:layout_below="@id/icon_usuarios"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

</RelativeLayout>
