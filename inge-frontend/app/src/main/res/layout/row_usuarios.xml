<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/main_button">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="35dp">
        <TextView android:fontFamily="@font/roboto_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email_usuario"
            android:text="algo@algo.com"
            android:textSize="16sp" />
        <TextView android:fontFamily="@font/roboto_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/apellido_usuario"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="11sp"
            android:text="APELLIDO"
            android:layout_below="@id/email_usuario"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp">
        <TextView android:fontFamily="@font/roboto_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activado"
            android:text="ACTIVADO"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activado"
            android:id="@+id/checkbox"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</RelativeLayout>
